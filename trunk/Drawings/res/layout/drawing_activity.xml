<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.almondmendoza.drawings.DrawingSurface
        android:id="@+id/drawingSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/undoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="U" />

        <Button
            android:id="@+id/redoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="R" />

        <Button
            android:id="@+id/pathBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="P" />

        <Button
            android:id="@+id/selectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="S" />

        <Button
            android:id="@+id/moveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="M" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/rectangleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="545dp"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        android:src="@drawable/rectangle" />

    <ImageButton
        android:id="@+id/triangleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circleBtn"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rectangleBtn"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        android:src="@drawable/triangle" />

    <ImageButton
        android:id="@+id/circleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/triangleBtn"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        android:src="@drawable/circle" />

    <ImageButton
        android:id="@+id/curveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rectangleBtn"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="113dp"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        android:src="@drawable/curve" />

    <ImageButton
        android:id="@+id/axesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/curveBtn"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        android:src="@drawable/axes" />

</RelativeLayout>